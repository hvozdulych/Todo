<h1>Incoming requests(<%= @incoming_requests.count %>)</h1>
<ul>
  <% @incoming_requests.each do |request| %>
    <li><%= request.user.profile.name %> - <%= link_to "accept", accept_friendship_path(id: request.id), method: :post %> | <%= link_to "no, thanks", reject_friendship_path(id: request.id), method: :delete, data: { confirm: 'Are you sure?' } %></li>
  <% end %>
</ul>